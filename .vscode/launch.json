  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm start",
      "name": "Run npm start",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/web-client"
    },
    {
      "name": "Launch Server Package",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/server/cmd/noodle-server/main.go",
      "args": ["--port","8080", "--config", "${workspaceFolder}/noodle.yaml"]
    },
    {
      "name": "Launch Server Package Dropping Tables",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/server/cmd/noodle-server/main.go",
      "args": ["--port","8080", "--config", "${workspaceFolder}/noodle.yaml", "--drop"]
    }
  ]
}