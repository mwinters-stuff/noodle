  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main/main.go",
      "args": ["${workspaceFolder}/noodle.yaml"]
    },
    {
      "name": "Launch Server Package",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/server/cmd/noodle-server/main.go",
      "args": ["--port","8080"]
    }
  ]
}